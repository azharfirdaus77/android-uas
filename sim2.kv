ScreenManager:
    LoginScreen:
    HomeScreen:
    SignupScreen:
    GuruScreen:
    SiswaScreen:
    KelasScreen:



<LoginScreen>: 
    name: 'Login'
    btnLogin_ : btnLogin
    txtUsername_ : txtUsername
    txtPassword_ : txtPassword
    
    TextInput:
        id: txtUsername
        pos_hint: {'center_x':0.5,'center_y':0.8}
        size_hint: (.2, None)
        height: 30
        multiline: False
        text: 'Username'
    
    TextInput:
        id: txtPassword
        pos_hint: {'center_x':0.5,'center_y':0.7}
        size_hint: (.2, None)
        height: 30
        multiline: False
        text: 'Password'

    MDRectangleFlatButton:
        id: btnLogin
        text: 'Login'
        pos_hint: {'center_x':0.5,'center_y':0.6}
        on_press: root.doLogin()  

    MDRectangleFlatButton:
        text: 'Signup'
        pos_hint: {'center_x':0.5,'center_y':0.53}
        on_press: root.manager.current = 'Signup'

    MDRectangleFlatButton:
        id: btnLogin
        text: 'Guru'
        pos_hint: {'center_x':0.5,'center_y':0.46}
        on_press: root.manager.current = 'Guru'
    
    MDRectangleFlatButton:
        id: btnLogin
        text: 'Siswa'
        pos_hint: {'center_x':0.5,'center_y':0.39}
        on_press: root.manager.current = 'Siswa'
    
    MDRectangleFlatButton:
        id: btnLogin
        text: 'Kelas'
        pos_hint: {'center_x':0.5,'center_y':0.32}
        on_press: root.manager.current = 'Kelas'




